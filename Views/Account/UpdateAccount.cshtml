@model AppUserModel
@{
	ViewData["Title"] = "Update Account Information";
}
<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-9" col-sm-offset-1>
				<div class="signup-form">
					<!--sign up form-->
					<h2>Update Account Information</h2>
					<form asp-action="UpdateInfoAccount" asp-controller="Account" method="post">
						<input type="hidden" asp-for="Id" />
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>

						<div class="form-group">
							<label>Username</label>
							<input asp-for="UserName" readonly class="form-control" />
							<span asp-validation-for="UserName" class="text-danger" />
						</div>

						<div class="form-group">
							<label>Email</label>
							<input asp-for="Email" readonly class="form-control" />
							<span asp-validation-for="Email" class="text-danger" />
						</div>

						<div class="form-group">
							<label>Phone</label>
							<input asp-for="PhoneNumber" class="form-control" />
							<span asp-validation-for="PhoneNumber" class="text-danger" />
						</div>
						<div class="form-group">
							<label>Old password</label>
							<input type="text" readonly value="@Model.PasswordHash" class="form-control" />
						</div>

						<div class="form-group">
							<label>Neww password</label>
							<input type="text" name="PasswordHash" class="form-control" />
							<span asp-validation-for="PasswordHash" class="text-danger" />
						</div>

						<div class="form-group">
							<button type="submit" class="btn btn-primary">Update</button>
						</div>
					</form>
				</div><!--/sign up form-->
			</div>
		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}