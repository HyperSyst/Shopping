<body>
	<header id="header">
		<!--header-->
		<div class="header_top">
			<!--header_top-->
			<div class="container">
				<div class="row">
					<div class="col-sm-6">
						<div class="contactinfo">
							<ul class="nav nav-pills">
								<li><a href="#"><i class="fa fa-phone"></i> 0142365987</a></li>
								<li><a href="#"><i class="fa fa-envelope"></i> shop@gmail.com</a></li>
							</ul>
						</div>
					</div>
					<div class="col-sm-6">
						<div class="social-icons pull-right">
							<ul class="nav navbar-nav">
								<li><a href="https://www.facebook.com/gearvnhcm"><i class="fa fa-facebook"></i></a></li>
								<li><a href="@Html.Raw("https://www.youtube.com/@GEARVNOfficial")"><i class="fa fa-youtube"></i></a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div><!--/header_top-->

		<div class="header-middle">
			<!--header-middle-->
			<div class="container">
				<div class="row">
					<div class="col-sm-4">
						<div class="logo pull-left">
							<a href="index.html"><img src="images/home/logo.png" alt="" /></a>
						</div>

					</div>
					<div class="col-sm-8">
						<div class="shop-menu pull-right">
							<div class="nav navbar-nav" style="display:inline-block; vertical-align:middle">
								<a type="button" class="btn btn-primary" asp-action="Index" asp-controller="Cart"><i class="fa fa-shopping-cart"></i> Cart</a>
								@if(User.Identity?.IsAuthenticated ?? false)
								{
									<a type="button" class="btn btn-primary" asp-controller="Account" asp-action="Logout"><i class="fa fa-lock"></i>Hi, @User.Identity.Name, Logout</a>
									<div class="dropdown" style="display:inline-block">
										<a class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
											<i class="fa fa-user"></i> Account <span class="caret"></span>
										</a>
										<ul class="dropdown-menu">
											<li><a asp-action="History" asp-controller="Account">History Orders</a></li>
											<li><a asp-action="UpdateAccount" asp-controller="Account">Update Account Infomation</a></li>
										</ul>
									</div>

									@if (User.IsInRole("admin"))
									{
										<a type="button" class="btn btn-primary" asp-action="Index" asp-area="Admin" asp-controller="Product">Quản trị</a>
									}
								}
								else
								{
									<a type="button" class="btn btn-primary" asp-controller="Account" asp-action="Login"><i class="fa fa-lock"></i>Login</a>
								}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div><!--/header-middle-->

		<div class="header-bottom">
			<!--header-bottom-->
			<div class="container">
				<div class="row">
					<div class="col-sm-9">
						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
						</div>
						<div class="mainmenu pull-left">
							<ul class="nav navbar-nav collapse navbar-collapse">
								<li><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
								<li><a asp-controller="Home" asp-action="contact">Liên hệ</a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div><!--/header-bottom-->
	</header><!--/header-->

	<section id="slider">
		<!--slider-->
		<div class="container">
			<div class="row">
				<div class="col-sm-12">
					<div id="slider-carousel" class="carousel slide" data-ride="carousel" data-interval="3000" data-pause="false">
						<ol class="carousel-indicators">
							<li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
							<li data-target="#slider-carousel" data-slide-to="1"></li>
							<li data-target="#slider-carousel" data-slide-to="2"></li>
						</ol>

						<div class="carousel-inner">
							<div class="item active">
								<div class="col-sm-12" style="text-align:center">
									<img src="https://tse4.mm.bing.net/th/id/OIP.fg60vtGJBtXlVRJFO1I_wgHaEQ?rs=1&pid=ImgDetMain&o=7&rm=3" width="85%" />
								</div>
							</div>
							<div class="item">
								<div class="col-sm-12" style="text-align:center">
									<img src="https://th.bing.com/th/id/OIP.23GybrqKfjTb0kMcaJdejgHaEK?w=316&h=183&c=7&r=0&o=5&dpr=1.3&pid=1.7" width="85%" />
								</div>
							</div>

							<div class="item">
								<div class="col-sm-12" style="text-align:center">
									<img src="https://wallpaperaccess.com/full/3819620.jpg" width="85%" />
								</div>
							</div>

						</div>

						<a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
							<i class="fa fa-angle-left"></i>
						</a>
						<a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
							<i class="fa fa-angle-right"></i>
						</a>
					</div>

				</div>
			</div>
		</div>
	</section><!--/slider-->

	<section>
		<div class="container">
			<div class="row">
				@Html.Partial("_Notification")
				@RenderBody()
			</div>
		</div>
	</section>

