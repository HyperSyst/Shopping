@{
    ViewData["title"] = "Product Listed";
    var key = 0;
}
<h3>List Compare</h3>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Image</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            key++;
            <tr>
                <th scope="row">@key</th>
                <td>@item.Product.Name</td>
                <td>@item..Product.Description</td>
                <td>@item.Product.Price.ToString("#,##0 VNĐ")</td>
                <td><img src="~/media/products/@item.Product.Image" width="150" height="auto" /></td>
                <td>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeleteCompare" asp-controller="Product" asp-route-id="@item.Compare.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
