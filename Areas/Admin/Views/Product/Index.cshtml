@model IEnumerable<ProductsModel>
@{
    ViewData["title"] = "Product Listed";
    Paginate pager = new Paginate();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<h3>List Products</h3>
<a class="btn btn-primary" asp-action="Create" asp-controller="Product">Add Product</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Quantity</th>
            <th scope="col">Product Sold</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Capital Price</th>
            <th scope="col">Product Slug</th>
            <th scope="col">Product Image</th>
            <th scope="col">Product Category</th>
            <th scope="col">Product Brand</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model){
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td><b>@item.Quantity</b><br /><a asp-controller="Product" asp-action="AddQuantity" asp-route-Id="@item.Id">Add Quantity</a></td>
                <td><b>@item.Sold</b></td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("#,##0 VNĐ")</td>
                <td>@item.CapitalPrice.ToString("#,##0 VNĐ")</td>
                <td>@item.Slug</td>
                <td><img src="~/media/products/@item.Image" width="150" height="auto"/></td>
                <td>@item.Categories.Name</td>
                <td>@item.Brand.Name</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_Pagination" model="@pager" />
