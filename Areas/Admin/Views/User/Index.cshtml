@{
    ViewData["title"] = "List Users";
}
<h3>List User</h3>
<a class="btn btn-primary" asp-action="Create" asp-controller="User">Add User</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>Email</th>
            <th>PasswordHash</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userWithRoles in Model)
        {
            <tr>
                <th>@userWithRoles.User.Id</th>
                <td>@userWithRoles.User.UserName</td>
                <td>@userWithRoles.User.Email</td>
                <td>@userWithRoles.User.PasswordHash</td>
                <td>@userWithRoles.User.PhoneNumber</td>
                <td>
                    @userWithRoles.RoleName
                </td>
                <td>
                    @if (userWithRoles.User.Id != ViewBag.loggedInUserId)
                    {
                        @if (userWithRoles.RoleName != "admin")
                        {
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-id="@userWithRoles.User.Id">Edit</a>
                            <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="User" asp-route-id="@userWithRoles.User.Id">Delete</a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>