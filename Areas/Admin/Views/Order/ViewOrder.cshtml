@model IEnumerable<OrderDetails>
@{
    ViewData["title"] = "Orders Details";
    decimal total = 0;
    decimal subtotal = 0;
}
<h3>List Orders</h3>
<table class="table" id="detail_orders">
    <thead>
        <tr>
            <th>Id</th>
            <th>Order Code</th>
            <th>UserName</th>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            subtotal = item.Quantity * item.Price;
            total += subtotal;
            <tr>
                <input type="hidden" asp-for="@item.OrderCode" class="getId" />
                <td>@item.Id</td>
                <td>@item.OrderCode</td>
                <td>@item.UserName</td>
                <td>@item.Product.Name</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@subtotal.ToString("C")</td>
            </tr>
        }
        <tr>
            <th colspan="5">Total:</th>
            <td>@total.ToString("#,##0")</td>
            <td>Shipping cost: @ViewBag.ShippingCost.ToString("#,##0")</td>
            <td><select class="form-control select-update-order">
                <option value="1" selected = "@(ViewBag.Status == 1 ? "selected" : null)">Đơn hàng mới</option>
                <option value="0" selected = "@(ViewBag.Status == 0 ? "selected" : null)">Đã xử lý</option>
            </select></td>
        </tr>
        <a asp-action="Index">Back to List Orders</a>
    </tbody>
</table> 
@section Scripts {
    <script>
                let table = new DataTable('#detail_orders', {
            layout: {
                topStart: {
                    buttons: ['pdf','print']
                }
            }
        });
    </script>

    <script>
        $(document).ready(function () {
            $('.select-update-order').change(function () {
                var status = $(this).val(); //status = 1
                var ordercode = $('.getId').val(); //

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("UpdateOrder")",
                    data: { status: status, ordercode: ordercode }, // Send data to the server

                    success: function (result) {
                        // Handle successful update
                        if (result.success) 
                        {
                            Swal.fire("Cập nhật đơn hàng thành công.");
                        } 
                        else 
                        {
                            Swal.fire("Cập nhật đơn hàng thất bại." + result.message);
                        }
                    }
                });
            });
        });
    </script>
}