@model IEnumerable<CategoriesModel>
@{
    ViewData["title"] = "Category Listed";

    Paginate pager = new Paginate();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<html>
    <head>

    </head>
    <body>
    <h3>List Category</h3>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Category">Add Category</a>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Category Name</th>
                <th scope="col">Product Description</th>
                <th scope="col">Product Slug</th>
                <th scope="col">Product Status</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.CategoryId</th>
                    <td>@item.Name</td>
                    <td>@Html.Raw(@item.Description)</td>
                    <td>@item.Slug</td>
                    <td>
                        @if (@item.Status == 1)
                        {
                            <span class="text text-success">Hiển thị</span>
                        }
                        else
                        {
                            <span class="text text-danger">Ẩn</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Category" asp-route-id="@item.CategoryId">Edit</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Category" asp-route-id="@item.CategoryId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_Pagination" model="@pager" />
    </body>
</html>
